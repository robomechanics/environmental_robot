<?xml version="1.0"?>
<launch>
    <arg name="useJoy" default="true"/>
    <!-- joy stick -->
    <node respawn="true" pkg="joy" type="joy_node" name="joy_input" if="$(arg useJoy)">
	    <param name="dev" type="string" value="/dev/input/js0"/>
	    <param name="autorepeat_rate" value="10"/>
    </node>
</launch>
